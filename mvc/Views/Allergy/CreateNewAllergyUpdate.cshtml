@model mvc.DAL.ViewModels.UpdateProductViewModel
@{
    ViewData["Title"] = "Create Allergy";
}   

<h2>Create New Allergy</h2>

<form asp-action="CreateNewAllergyUpdate" method="post">
     <div class="form-group">
        <input type="hidden" asp-for="Product.ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Allergy.Name"></label><span class="text-danger">*</span>
        <input asp-for="Allergy.Name" class="form-control" />
        <span asp-validation-for="Allergy.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
    <a asp-controller="Product" asp-action="Update" asp-route-id="@Model.Product.ProductId" class="btn btn-secondary">Back to Create Product</a>
</form>
