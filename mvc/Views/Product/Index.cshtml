@model IEnumerable<Product>

<h1>Product List</h1>
<div class="container">
    <table class='table table-striped' style='max-width: 1200px;'>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th> <!-- Add an Actions column -->
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px;" /> <!-- Display product image -->
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">Details</a> <!-- Button to view details -->
                    <form asp-action="Delete" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="@product.ProductId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>