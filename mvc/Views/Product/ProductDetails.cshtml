@model Product

<h1>@Model.Name</h1>

<div class="row gx-5">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid col-5" />
    <div class="col-7">
        <h3 class="pull-right">Product description</h3>
        <p>@Model.Description</p>
        <h3 class="pull-right">Nutritional values</h3>
        <p><strong>Energy: </strong>@Model.Energy.ToString("0.00 kcal")</p>
        <p><strong>Fat: </strong>@Model.Fat.ToString("0.00 g")</p>
        <p><strong>Protein: </strong>@Model.Protein.ToString("0.00 g")</p>
        <p><strong>Carbohydrates: </strong>@Model.Carbohydrates.ToString("0.00 g")</p>
        <p><strong>Category: </strong>@Model.Category.Name<br></p>
        <p><strong>Allergies: </strong>
                @if (Model.AllergyProducts != null)
                {
                <ul>
                        @foreach (var allergyProduct in Model.AllergyProducts)
                        {
                        <li>@allergyProduct.Allergy.Name</li>
                        }
                </ul>
                }
        </p>
        <p><strong>Created: </strong>@Model.CreatedAt</p>
    </div>
</div>
 <p><a href="/Product/Index">Back to product list!</a></p>