@model Product

<div class="col-md-4 mb-4">
    <div class="card">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">
            <h6>NÃ¦ringsinnhold per 100 gram</h6>
            <strong>Energy: </strong>@Model.Energy.ToString("0.00 kcal")<br>
            <strong>Fat: </strong>@Model.Fat.ToString("0.00 g")<br>
            <strong>Protein: </strong>@Model.Protein.ToString("0.00 g")<br>
            <strong>Carbohydrates: </strong>@Model.Carbohydrates.ToString("0.00 g")<br>
            <strong>Category: </strong>@Model.Category.Name<br>
            <strong>Allergies: </strong>
                @if (Model.AllergyProducts != null)
                {
                <ul>
                        @foreach (var allergyProduct in Model.AllergyProducts)
                        {
                        <li>@allergyProduct.Allergy.Name</li>
                        }
                </ul>
                }
            </p>
        </div>
        <a asp-action="Review" asp-route-id="@Model.ProductId" class="btn btn-warning">Add a review</a>
        <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-info">Details</a>
        <a asp-action="Update" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
    </div>
</div>
