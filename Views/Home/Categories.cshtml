@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // This ensures the view uses the shared layout
    ViewData["Title"] = "Categories";
}

<div class="category-page">
    <header>
        <h1>Categories</h1>
        <p>Explore our wide range of product categories and find the best for you!</p>
    </header>

    <section class="categories-section">
        <!-- Link to the FruitsAndVegetables view for subcategories -->
        <div class="category-button">
            <a href="@Url.Action("FruitsAndVegetables", "Products")">Fruits and Vegetables</a>
        </div>
        <div class="category-button">
            <a href="@Url.Action("CategoryDetails", "Products", new { category = "Beverages" })">Beverages</a>
        </div>
        <div class="category-button">
            <a href="@Url.Action("CategoryDetails", "Products", new { category = "DairyCheeseEggs" })">Dairy, Cheese, and Eggs</a>
        </div>
        <div class="category-button">
            <a href="@Url.Action("CategoryDetails", "Products", new { category = "VeganProducts" })">Vegan Products</a>
        </div>
    </section>
</div>
